<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{.Title}}</title>
    <link href="bootstrap.min.css" rel="stylesheet">
    <link href="datatables.min.css" rel="stylesheet">
    <script src="jquery-3.7.1.min.js" type='text/javascript'></script>
    <script src="datatables.min.js" type='text/javascript'></script>
    <script src="bootstrap.min.js" type='text/javascript'></script>
    <style>
    {{range .Tags}}
        .tagButton{{.Id}}-outline {
            color: #{{.BgColour}};
            --bs-btn-border-color: #{{.BgColour}};
        }
        .tagButton{{.Id}}-filled {
            color: #{{.FgColour}};
            background-color: #{{.BgColour}};
            --bs-btn-border-color: transparent;
        }

        .tagButton{{.Id}} {
            color: #{{.FgColour}};
            background-color: #{{.BgColour}};
            --bs-btn-border-color: transparent;
            --bs-btn-hover-color: #{{.FgColour}};
            --bs-btn-hover-bg: #{{.BgColour}};
            --bs-btn-hover-border-color: transparent;
            --bs-btn-active-color: #{{.FgColour}};
            --bs-btn-active-bg: #{{.BgColour}};
            --bs-btn-active-border-color: transparent;
        }
    {{end}}
    </style>
</head>
<body>
    <div class="container" id="body">
        <div class="row">&nbsp;</div>
        <div class="row" id="headerList">
            <h2 class="text-center">{{.Title}}</h2>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row" id="tagList">
            <div class="row">
                {{range .Tags}}
                <div class="col" id="buttonList-button{{.Id}}">
                    <div><a id="buttonListButton{{.Id}}"  class="btn btn-outline-light tagButton tagButton{{.Id}}-outline" href="javascript:toggleSelect({{.Id}});">{{.Name -}}</a></div>
                </div>
                {{end}}
            </div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row" id="channelListTable">
            <table class="table table-striped table-sorted" id="channelList">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Notes</th>
                    <th>Tags</th>
                </tr>
            </thead>
            <tbody>
                {{range .Channels}}
                <tr>
                    <td><a href="https://youtube.com/channel/{{.Id}}" target='_blank'>{{.Name -}}</a></td>
                    <td>{{.Description}}</td>
                    <td>{{.Notes}}</td>
                    <td>{{range .Tags}}<div><p class="btn btn-outline-light tagButton{{.Id}}">{{.Name -}}</p></div><br>{{end}}</td>
                </tr>
                {{end}}
            </tbody>
            <tfoot>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Notes</th>
                    <th>Tags</th>
                </tr>
            </tfoot>
            </table>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row" id="footer">
            <p><em>This page was generated by <a href="https://gitea.joyrex.net/ejstacey/ysm" target="_blank">Joyrex YSM</a>. It uses javascript and css from <a href="https://getbootstrap.com" target="_blank">Bootstrap</a>, <a href="https://jquery.com/" target="_blank">JQuery</a>, <a href="https://datatables.net/" target="_blank">DataTables</a>. The default theme is "<a href="https://bootswatch.com/darkly/" target="_blank">Darkly</a>" from <a href="https://bootswatch.com/" target="_blank">Bootswatch</a>.</em></p>
        </div>
    </div>
    <script type='text/javascript'>
        $('td').each(function (index){
            $(this).html($(this).html().replace(/\n/, '<br><br>'));
        });
        let table = new DataTable('#channelList', {
            order: [[0, 'asc']],
            pageLength: 25
        }); 

        var selectedIds = setupSelectedIds(selectedIds);

        table.search.fixed('range', function (searchStr, data, index) {
            var found = false;
            $.each(selectedIds, function (index, selectedId) {
                if (data[3] == "") {
                    return true;
                }

                var objs = $($.parseHTML(data[3]));
                $.each(objs, function (index) {
                    var elementType = $(this).prop('nodeName');
                    if (elementType != 'DIV') {
                        return true;
                    }

                    var testClass ='tagButton' + selectedId;

                    var firstChild = this.firstChild;
                    if ($(firstChild).hasClass(testClass)) {
                        found = true;
                        return false;
                    }

                });                
            });

            if (found) {
                return true;
            }

            return false;
        });
        table.draw();

        function setupSelectedIdsHash() {
            var selectedIdsHash = new Object({});
            let hash = window.location.hash;
            var matches = hash.match(/\d+/g) || new Array();
            $.each(matches, function (index) {
                selectedIdsHash[this] = 1;
            });

            return selectedIdsHash;
        }

        function setupSelectedIds() {
            var selectedIdsHash = setupSelectedIdsHash();

            var selectedIds = Object.keys(selectedIdsHash);
            var totalIds = $("div[id^='buttonList-button']").length;
            if (selectedIds.length === 0) {
                $('.tagButton').each(function (index) {
                    var matches = $(this).prop('id').match(/^buttonListButton(\d+)$/);
                    var id = matches[1];
                    selectedIds.push(id);
                }); 
            }

            $('.tagButton').each(function (index) {
                var matches = $(this).prop('id').match(/^buttonListButton(\d+)$/);
                var id = matches[1];
                var found = false;
                $.each(selectedIds, function (index, selectedId) {
                    if (selectedId === id) {
                        found = true;
                    }
                });
                if (found) {
                    $(this).removeClass('tagButton' + id + '-outline').addClass('tagButton' + id + '-filled');
                } else {
                    $(this).removeClass('tagButton' + id + '-filled').addClass('tagButton' + id + '-outline');
                }
            });

            return selectedIds;
        }

        function toggleSelect(id="") {
            var selectedIdsHash = setupSelectedIdsHash();

            if (id != "") {
                if (id in selectedIdsHash) {
                    delete(selectedIdsHash[id]);
                } else {
                    selectedIdsHash[id] = 1;
                }
            }

            // now set the hash to what is current
            window.location.hash = '#' + Object.keys(selectedIdsHash).join(",");

            // refresh selectedIds
            selectedIds = setupSelectedIds();

            table.draw();
        }
    </script>
</body>
</html>
